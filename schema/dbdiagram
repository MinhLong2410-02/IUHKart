Table Order {
  OrderId int [primary key, not null]
  OrderNumber varchar(255)
  ShippingDate date
  OrderDate date
  OrderAmount float
  OrderStatus varchar(255) //enum('pending', 'processing', 'shipped', 'delivered', 'cancelled')
  Cart_CartId int [not null]
  CustomerId int [not null]
  AddressId int
}

Table OrderProduct {
  OrderProductId int [primary key, not null]
  ProductId int [not null]
  OrderId int [not null]
  Price float // Giá đề xuất
  Quantity int
}


Table Product {
  ProductId int [primary key, not null]
  ProductName varchar(255)
  CategoryId int [not null]  
  VendorId int [not null] 
  OriginalPrice float // Giá gốc
  Stock int
  Brand varchar(255)
}

Table ProductImage{
  ProductImgId int [pk]
  ProductId int 
  ProductImgUrl varchar
}

Table Discount{
  DiscountId int pk
  Percentage float

}

Table ProductDiscount{
  ProductDiscountId int pk
  ProductId int
  DiscountId int
  StartDate datetime
  EndDate datetime
}

Table Payment {
  PaymentId int [primary key, not null]
  OrderId int [not null] 
  PaymentMode varchar(255) //enum('bank_transfer', 'cash')
  CustomerId int [not null]  
  Date_of_payment date
}

Table Address {
  AddressId int [pk, not null]
  City_Province varchar(100)
  AddressDetail varchar(200)
}

Table Cart {
  CartId int [primary key, not null]
  ProductId int [not null] 
  CustomerId int [not null] 
  GrandTotal float
  ItemsTotal int
}


Table Review {
  ReviewId int [primary key, not null]
  Description text
  Ratings varchar(255) //enum('1', '2', '3', '4', '5') // Possible values: '1', '2', '3', '4', '5'
  ProductId int [not null]  
  CustomerId int [not null]  
}

Table Vendor {
  VendorId int [primary key, not null]
  Name varchar(255)
  Phone varchar(20)
  TotalSales float
  Email varchar(50)
  Description text
  AddressId int
}

Table Category {
  CategoryId int [primary key, not null]
  CategoryName varchar(255)
  Description text
}

Table Customer {
  CustomerId int [primary key, not null]
  FullName varchar(30)
  Email varchar(50)
  DateOfBirth date
  Phone varchar(20)
  Age smallint
  AvatarUrl varchar(200)
  AddressId int
}

Ref: ProductDiscount.DiscountId > Discount.DiscountId
Ref: ProductDiscount.ProductId > Product.ProductId
Ref: Order.CustomerId > Customer.CustomerId
Ref: OrderProduct.OrderId > Order.OrderId
Ref: OrderProduct.ProductId > Product.ProductId
Ref: Product.VendorId > Vendor.VendorId
Ref: Product.CategoryId > Category.CategoryId
Ref: Payment.OrderId > Order.OrderId
Ref: Payment.CustomerId > Customer.CustomerId
Ref: Address.AddressId - Customer.AddressId
Ref: Address.AddressId - Vendor.AddressId
Ref: Address.AddressId - Order.AddressId
Ref: Cart.CustomerId > Customer.CustomerId
Ref: Cart.ProductId > Product.ProductId
Ref: Review.CustomerId > Customer.CustomerId
Ref: Review.ProductId > Product.ProductId
Ref: ProductImage.ProductId > Product.ProductId

// Ref: "Customer"."CustomerId" < "Customer"."FullName"